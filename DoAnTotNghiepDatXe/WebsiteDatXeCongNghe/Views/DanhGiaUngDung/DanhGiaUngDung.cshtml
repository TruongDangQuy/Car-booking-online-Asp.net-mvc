@model IEnumerable<WebsiteDatXeCongNghe.Models.DanhGiaUngDung>
@{
    ViewBag.Title = "DanhGiaUngDung";
}
<h2>DanhGiaUngDung</h2>
<!DOCTYPE html>
<html lang="en">
<head>
