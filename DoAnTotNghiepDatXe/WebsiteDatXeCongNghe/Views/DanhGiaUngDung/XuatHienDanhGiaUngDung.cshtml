
@{
    ViewBag.Title = "XuatHienDanhGiaUngDung";

}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="~/css/Style.css" rel="stylesheet" />
<link href="~/css/DanhGiaUngDung2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<div class="swiper-wrapper" id="swiper">
    @foreach (var item in ViewBag.Model)
    {
        <div class="swiper-slide box">
            <img src="~/image/KhachHang/@item.KhachHang.HinhAnh" alt="" id="picture">
            <div class="content">
                <p id="date">@item.NgayDanhGia</p><p id="content">@item.NoiDung</p>
                <h3 id="Name">@item.KhachHang.Ten</h3>
                <div class="stars">
                    @for (int i = 0; i < @item.MucDo; i++)
                    {
                        <i class="fas fa-star"></i>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
<script src="~/js/DanhGia.js"></script>

