
@{
    ViewBag.Title = "ThongKeDoanhThu";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Thống kê doanh thu</title>
    <link href="~/css/ThongKeDoanhThu.css" rel="stylesheet" />
    <script src="~/js/ThongKeDoanhThu.js"></script>

</head>
<body>
    <div class="revenue-container">
        <h2>Thống kê doanh thu</h2>
        <div class="dropdown">
            <select id="time-period" onchange="updateChart()">
                <option value="day">Ngày</option>
                <option value="week">Tháng</option>
                <option value="month">Năm</option>
                <option value="year">Tổng doanh thu năm</option>
            </select>
        </div>
        <div id="date-selection" style="display: none;">
            <label for="selected-date">Chọn ngày:</label>
            <input type="date" id="selected-date">
        </div>
        <div>
            <label for="selected-month">Tháng:</label>
            <select id="selected-month">
                <option value="1">Tháng 1</option>
                <option value="2">Tháng 2</option>
                <option value="3">Tháng 3</option>
                <option value="4">Tháng 4</option>
                <option value="5">Tháng 5</option>
                <option value="6">Tháng 6</option>
                <option value="7">Tháng 7</option>
                <option value="8">Tháng 8</option>
                <option value="9">Tháng 9</option>
                <option value="10">Tháng 10</option>
                <option value="11">Tháng 11</option>
                <option value="12">Tháng 12</option>
            </select>
        </div>
        <div>
            <label for="selected-year">Năm:</label>
            <select id="selected-year">
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <!-- Add more options for other years if needed -->
            </select>
        </div>
        <div class="chart-container">
            <div class="column-chart">
                <!-- Columns will be dynamically generated here -->
            </div>
        </div>
        <div class="statistics">
            <!-- Statistics for specific time periods will be dynamically generated here -->
        </div>
    </div>
    <!-- Add a canvas element to display the chart -->
    <canvas id="revenueChart" width="400" height="200"></canvas>
</body>
</html>


