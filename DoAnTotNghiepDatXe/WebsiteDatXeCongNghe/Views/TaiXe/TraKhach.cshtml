                var originalPrice = $('#original-price').val();
                var surchargePrice = $('#surcharge-price').val();
                var totalPrice = $('#total-price').val();

                // Call the SendPaymentCash method on the server-side
                bookingHub.server.sendPaymentCash(passengerName, originalPrice, surchargePrice, totalPrice);
                // Show a SweetAlert success message
                swal({
                    title: "Đã gửi hóa đơn!",
                    text: "Thanh toán tiền mặt ",
                    type: "success",
                    showConfirmButton: false,
                    timer: 1500
                });

            });
        });
    </script>
