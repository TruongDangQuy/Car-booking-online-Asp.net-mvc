    <script>
        $(document).on("click", ".fa-comment", function () {
            var phoneOfSender = $("#phoneNumber").text();
            var phoneOfReceiver = $("#phone-number").text();

            $.ajax({
                type: "POST",
                url: "/NhanTin/NoiDungNhanTin",
                data: { phoneOfSender: phoneOfSender, phoneOfReceiver: phoneOfReceiver },
                dataType: "json",
                success: function (data) {
                    $("#sender-chat-message").empty();
                    $("#receiver-chat-message").empty();

                    data.SenderChatMessages.forEach(function (message) {
                        $("#sender-chat-message").append("<div class='chat-message right'><div class='chat-message-text'>" + message + "</div></div>");
                    });

                    data.ReceiverChatMessages.forEach(function (message) {
                        $("#receiver-chat-message").append("<div class='chat-message left'><div class='chat-message-text'>" + message + "</div></div>");
                    });

                    // Open the chat popup
                    $("#myForm").show();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    console.log(thrownError);
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            // Initialize the SignalR connection
            var chatHub = $.connection.chatHub;

            // Start the SignalR connection
            $.connection.hub.start().done(function () {
                console.log('SignalR connection established.');

                // Handle send button click event
                $("#send-message-btn").click(function () {
                    sendMessage();
                });

                // Handle enter key press event
                $("#chat-textarea").keypress(function (event) {
                    if (event.which === 13 && !event.shiftKey) {
                        event.preventDefault();
                        sendMessage();
                    }
                });
            });

            // Function to send the message
            function sendMessage() {
                var message = $("#chat-textarea").val();
                if (message.trim() !== "") {
                    // Append the message to the sender's chat messages
                    var senderChatMessage = $("<div class='chat-message right'><div class='chat-message-text'>" + message + "</div></div>");
                    $("#sender-chat-message").append(senderChatMessage);

                    // Clear the input textarea
                    $("#chat-textarea").val("");

                    // Send the message via AJAX
                    $.ajax({
                        url: "/NhanTin/ThemNhanTin",
                        type: "POST",
                        dataType: "json",
                        data: {
                            message: message,
                            phoneOfSender: $("#phoneNumber").text(),
                            phoneOfReceiver: $("#phone-number").text()
                        },
                        success: function (response) {
                            // Handle success response if needed
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    });

                    // Send the message via SignalR
                    var phoneOfSender = $("#phoneNumber").text();
                    var phoneOfReceiver = $("#phone-number").text();
                    chatHub.server.driverSend(message, phoneOfSender, phoneOfReceiver);
                }
            }
        });

    </script>
    

