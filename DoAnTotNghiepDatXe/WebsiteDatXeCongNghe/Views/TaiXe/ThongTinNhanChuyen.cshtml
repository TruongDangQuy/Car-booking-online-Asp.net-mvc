@model IEnumerable<WebsiteDatXeCongNghe.Models.TaiXeNhanChuyenXe>
@{
    ViewBag.Title = "ThongTinNhanChuyen";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List</title>
    <link rel="stylesheet" href="~/css/asset/style.css">
    <link rel="stylesheet" href="~/css/themify-icons/themify-icons.css">
    <script src="~/js/jquery-1.11.2.min.js"></script>
</head>
<body>
    <header class="header">

        <div id="menu-btn" class="fas fa-bars"></div>

        <a href="#" class="logo"><h3> <span>Dịch vụ</span> đặt xe công nghệ </h3> </a>




    </header>



    <div class="container">
        <div class="list-table ">

            <div class="btn-control ">
                @*<button type="#" class="btn-new js-Open-add"> <i class="ti-pencil-alt2"></i> ADD New</button>*@
                <a href="/TaiXe/ThongTinTaiXe"><button class="favorite styled" type="button">Quay lại</button></a>
                <div class="seach">
                    <form>
                        <input type="text" id="Search" placeholder="Search..." class="input"><a href=""><i class="icon ti-search"></i></a>
                    </form>
                </div>
            </div>
            <div class="content">
                <h2>Thông tin nhận chuyến xe</h2>
                <a href=""><i class=""></i></a>

            </div>

            <form action="" method="post">
                <table class="table-form">
                    <thead class="table-header">
                        <tr>
                            <th>Mã nhận chuyến</th>
                            <th>Số điện thoại</th>
                            <th>Mã đặt xe</th>
                            <th>Ngày nhận</th>
                            <th>Trạng thái</th>
                            <th>Ghi chú</th>
                            <th colspan="1"> </th>
                        </tr>
                    </thead>

                    <tbody class="table-body ">
                        @foreach (var item in Model)
                        {
                            <tr class="Search" id="row_@item.MaNhanChuyen">
                                <td>@item.MaNhanChuyen</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.MaDatXe</td>
                                <td>@item.NgayNhan</td>
                                <td>@item.TrangThai</td>
                                <td>@item.GhiChu</td>
                                <td class="btn-delete js-delete">
                                    <a class="delete-link" data-id="@item.MaNhanChuyen" data-name="@item.MaDatXe">
                                        <i class="ti-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </form>
        </div>



    </div>

    <style>
        .confirmation-box {
            position: fixed;
            z-index: 9999;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

            .confirmation-box h3 {
                font-size: 20px;
                margin-bottom: 20px;
            }

            .confirmation-box p {
                font-size: 16px;
                margin-bottom: 20px;
            }

            .confirmation-box .button-group {
                display: flex;
                justify-content: center;
            }

                .confirmation-box .button-group button {
                    margin: 0 10px;
                    padding: 10px 20px;
                    font-size: 16px;
                }

                    .confirmation-box .button-group button.yes {
                        background-color: #e74c3c;
                        color: #fff;
                        border: none;
                    }

                    .confirmation-box .button-group button.no {
                        background-color: #ccc;
                        color: #333;
                        border: none;
                    }
    </style>

 



    <script>
        $(document).ready(function () {
            $('.delete-link').click(function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var name = $(this).data('name');
                var confirmationBoxHtml = '<div class="confirmation-box">' +
                    '<h3>Xóa chuyến xe nhận</h3>' +
                    '<p>Bạn có chắc chắn muốn chuyến xe nhận có mã <strong>' + name + '</strong>?</p>' +
                    '<div class="button-group">' +
                    '<button class="yes" data-id="' + id + '">Có</button>' +
                    '<button class="no">Không</button>' +
                    '</div>' +
                    '</div>';
                $('body').append(confirmationBoxHtml);
                $('.yes').click(function () {
                    var id = $(this).data('id');
                    deleteNhanChuyen(id);
                    $('.confirmation-box').remove();
                   
                });
                $('.no').click(function () {
                    $('.confirmation-box').remove();
                });
            });
        });

        function deleteNhanChuyen(id) {

            

            // Xóa 
            $.ajax({
                url: '/TaiXe/XoaThongTinNhanChuyen/' + id,
                type: 'POST',
                success: function (result) {
                   
                    // Xóa dòng thông tin nhận chuyến
                    $('#row_' + id).remove();
                },
                error: function () {
                    
                    alert('Đã xảy ra lỗi khi xóa chuyến này!');
                }
            });

        }
    </script>
    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchText = $("#Search").val().toLowerCase();
                $(".Search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchText)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
    

</body>

</html>

