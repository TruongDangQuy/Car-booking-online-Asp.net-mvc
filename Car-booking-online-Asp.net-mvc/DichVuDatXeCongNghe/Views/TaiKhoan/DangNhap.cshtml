@model DichVuDatXeCongNghe.Models.TaiKhoan

@{
    ViewBag.Title = "DangNhap";
}
@Html.AntiForgeryToken()
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>ĐĂNG NHẬP</title>
    <link href="~/css/signin.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Đăng nhập
        </div>
        <center>@Html.ValidationSummary(true, "")</center>
    <form method="post" action="DangNhap">
        <div class="field">
            <input type="text" name="SoDienThoai">
            <label>Số điện thoại</label>

            <center>@Html.ValidationMessageFor(x => x.SoDienThoai, "")</center>

            <br />
        </div>
        <br />
        <br />
        <div class="field">
            <input type="password" name="MatKhau">
            <label>Mật khẩu</label>
            <center>@Html.ValidationMessageFor(x => x.MatKhau, "")</center>

            <br />
        </div>
        <br />
        <br />
        <div class="field">
            <input type="submit" value="Đăng nhập">
        </div>
        <div class="signup-link">
            <a href="DangKy">Đăng ký ngay</a><br>
            <a href="#">Đổi mật khẩu</a>
            <br><a href="Index">Quay về trang chủ</a>
        </div>

    </form>
    </div>
</body>
</html>
