@model DichVuDatXeCongNghe.Models.KhachHang

@{
    ViewBag.Title = "SuaDoiKH";
}





    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Sửa đổi thông tin cá nhân</title>
        <link href="~/css/signin.css" rel="stylesheet" />
    </head>
    <body>
        <div class="wrapper">

            <div class="title">
                Sửa đổi thông tin
            </div>
                <center>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</center>
                <form method="post" action="SuaDoiKH" enctype="multipart/form-data">
                    <div class="field">
                        <input type="hidden" name="MaKH" value="@Model.MaKH" readonly>                       
                        @Html.ValidationMessageFor(model => model.MaKH)
                    </div>
                    <div class="field">
                        <input type="text" name="SoDienThoai" value="@Model.SoDienThoai" readonly>

                        @Html.ValidationMessageFor(model => model.SoDienThoai)
                    </div>
                    <div class="field">
                        <input type="text" name="Ten" value="@Model.Ten">
                        <label>Tên</label>
                        @Html.ValidationMessageFor(model => model.Ten)
                    </div>
                    <div class="field">
                        <input type="date" name="NgayThangNamSinh" value="@Model.NgayThangNamSinh.ToString("yyyy-MM-dd")">
                        <label>Ngày Tháng Năm Sinh</label>
                        @Html.ValidationMessageFor(model => model.NgayThangNamSinh)
                    </div>
                    <div class="field">
                        <input type="email" name="Email" value="@Model.Email">
                        <label>Email</label>
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="field">
                        <img src="~/image/KhachHang/@Model.HinhAnh" style="width:320px;height:130px" />
                        <input type="file" id="HinhAnhUpload" name="HinhAnhUpload" accept="image/*">
                        <label>Hình ảnh</label>
                        @Html.ValidationMessageFor(model => model.HinhAnh)
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="field">
                        <input type="submit" value="Cập nhật">
                    </div>
                    <div class="signup-link">
                        <a href="DangNhap">Đăng nhập ngay</a>
                        <br><a href="Index">Quay về trang chủ</a>
                    </div>
                    @if (ViewBag.Message == null)
                    {
                        <div class="form-group">
                            <div class="col-sm-10">@ViewBag.Message</div>
                        </div>
                    }
                </form>
        </div>

    </body>
</html>




