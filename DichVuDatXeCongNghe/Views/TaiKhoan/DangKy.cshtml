@model DichVuDatXeCongNghe.Models.TaiKhoan

@{
    ViewBag.Title = "DangKy";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>ĐĂNG KÝ</title>
    <link href="~/css/signin.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Đăng ký
        </div>
        <center>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</center>
        <form method="post" action="DangKy">
            <div class="field">
                <input type="text" name="SoDienThoai">
                <label>Số điện thoại</label>
                @Html.ValidationMessageFor(model => model.SoDienThoai)
            </div>
            <br />
            <br />
            <div class="field">
                <input type="password" name="MatKhau">
                <label>Mật khẩu</label>
                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
            <br />
            <br />
            <div class="field">
                <input type="password" name="NhapLaiMatKhau">
                <label>Nhập lại mật khẩu</label>
                @Html.ValidationMessageFor(model => model.NhapLaiMatKhau)
            </div>
            <input type="hidden" name="VaiTro" value="user" />
            <br />
            <br />
            <div class="field">
                <input type="submit" value="Đăng ký">
            </div>
            <div class="signup-link">
                <a href="DangNhap">Đăng nhập ngay</a>
                <br><a href="Index">Quay về trang chủ</a>
            </div>
            @if (ViewBag.Message == null)
            {
                <div class="form-group">
                    <div class="col-sm-10">@ViewBag.Message</div>
                </div>
            }
        </form>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>


