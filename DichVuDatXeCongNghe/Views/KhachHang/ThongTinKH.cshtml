                                <td>@item.SoDienThoai</td>
                                <td>@item.Ten</td>
                                <td>@item.NgayThangNamSinh.ToString("yyyy-MM-dd")</td>
                                <td>@item.Email</td>
                                <td><img src="~/image/KhachHang/@item.HinhAnh" style="height: 150px;width: 150px"></td>
                                <td class=" btn-edit js-edit">
                                    <a onclick="SuaDoiKH(@item.MaKH)"><i class="ti-pencil "></i></a>
                                </td>
                                <td class=" btn-delete js-delete">
                                    <a><i class="ti-trash"></i></a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </form>
        </div>

        <a href="/TaiKhoan/Services"><button class="favorite styled" type="button">Quay lại</button></a>

    </div>

    <!-- sua -->
    <div class="form-edit container" id="SuaDoiKH">
        <div class="add">
            <a href=""><i class="btn-close ti-close js-close"></i></a>
            <div class="content">
                <h2>Sửa đổi</h2>
            </div>
            <div class="form-input">
                <form method="post" action="SuaDoiKH" enctype="multipart/form-data">
                    @foreach (var item in Model)
                    {
                        <div class="add-nhap "><label for="">Mã khách hàng</label><input type="text" class="input" name="MaKH" value="@item.MaKH"></div>
                        <div class="add-nhap "><label for="">Số điện thoại</label><input type="text" class="input" name="SoDienThoai" value="@item.SoDienThoai"></div>
                        <div class="add-nhap "><label for="">Tên</label><input type="text" class="input" name="Ten" value="@item.Ten"></div>
                        <div class="add-nhap "><label for="">Ngày tháng năm sinh</label><input type="date" class="input" name="NgayThangNamSinh" value="@item.NgayThangNamSinh.ToString("yyyy-MM-dd")"></div>
                        <div class="add-nhap "><label for="">Email</label><input type="text" class="input" name="Email" value="@item.Email"></div>
                        <div class="image-input ">
                            <label for="">Hình ảnh</label>
                            <img src="~/image/KhachHang/@item.HinhAnh" style="width:320px;height:130px" id="image" />
                            <img id="image-preview" alt="your image" title='' style="display: none" />
                            <input type="file" id="file-input" name="HinhAnhUpload" onchange="change_image()">

                            <script>
                                function readURL(input) {
                                    if (input.files && input.files[0]) {
                                        var reader = new FileReader();
                                        reader.onload = function (e) {
                                            $('#image-preview').attr(
                                                'src',
                                                e.target.result);
                                            $('#image-preview').hide();
                                            $('#image-preview').fadeIn(
                                                650);
                                            $('#image-preview').css(
                                                'display', 'block')
                                            $('#image').css('display',
                                                'none');
                                        }
                                        reader
                                            .readAsDataURL(input.files[0]);
                                    }
                                }
                                $("#file-input").change(function () {
                                    readURL(this);
                                });
                            </script>
                        </div>
                        <div class="btn-add">
                            <button class="btn submit ">Xác Nhận </button> @*<button class="btn  cancel js-close">Hủy Bỏ</button>*@
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

