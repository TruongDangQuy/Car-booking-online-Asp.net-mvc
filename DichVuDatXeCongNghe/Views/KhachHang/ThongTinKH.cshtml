            <div class="content">
                <h2>Thông tin người dùng</h2>
                <a href=""><i class=""></i></a>

            </div>

            <form action="" method="post">
                <table class="table-form">
                    <thead class="table-header">
                        <tr>
                            <th>Mã Khách Hàng</th>
                            <th>Số Điện Thoại</th>
                            <th>Tên</th>
                            <th>Ngày Tháng Năm Sinh</th>
                            <th>Email</th>
                            <th>Hình Ảnh</th>
